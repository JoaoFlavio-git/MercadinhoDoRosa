@model ApiDoMercadinho.Models.Mercado;

@{
    ViewData["Title"] = "Detalhes do Mercado";
}

<h1>Detalhes do Mercado</h1>

<div>
    <h4>Informações do Mercado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estoque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estoque)
        </dd>
    </dl>
</div>

<div style="padding: 6px">
    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
    <a type="button" class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>
