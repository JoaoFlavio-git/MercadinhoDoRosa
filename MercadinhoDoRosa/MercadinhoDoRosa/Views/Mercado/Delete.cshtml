@model ApiDoMercadinho.Models.Mercado;

@{
	ViewData["Title"] = "Deletar";
}

<h1>Deletar Mercado</h1>

<h3>Tem certeza de que deseja excluir este item?</h3>
<div>
	<h4>Detalhes do Item do Mercadinho</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Nome)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Nome)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Preco)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Preco)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Estoque)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Estoque)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalConfirmationDelete">Remover</button>
		<a type="button" class="btn btn-secondary" asp-action="Index">Voltar</a>
	</form>

	<div class="modal fade" id="modalConfirmationDelete" tabindex="-1" role="dialog">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="deleteModal">Confirmar Exclusão</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<p>Tem certeza de que deseja excluir o item '@Model.Nome.ToUpper()'? Esta ação não pode ser desfeita.</p>
				</div>
				<div class="modal-footer">
					<form asp-action="Delete">
						<input type="hidden" asp-for="Id" />
						<input type="submit" value="Excluir" class="btn btn-warning" />
						<button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />

	<script src="https://code.jquery.com/jquery-3.7.0.slim.min.js"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.2/js/bootstrap.min.js"></script>
	}
</div>
